block variables
  - var pageTitle = "Sedona"

doctype html

html(lang="ru")
  head
    meta(charset="utf-8")
    title #{pageTitle}

    meta(
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1, shrink-to-fit=no, viewport-fit=cover")

    meta(
      name="format-detection"
      content="telephone=no")

    meta(
      name="format-detection"
      content="address=no")

  body
    .page
      block header

      main.main
        block main

      block footer
